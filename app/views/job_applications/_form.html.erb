<%= form_with(model: job_application, class: "contents") do |form| %>
  <% if job_application.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(job_application.errors.count, "error") %> prohibited this job application from being saved:</h2>

      <ul class="list-disc ml-6">
        <% job_application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :company_name %>
    <%= form.text_field :company_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": job_application.errors[:company_name].none?, "border-red-400 focus:outline-red-600": job_application.errors[:company_name].any? }] %>
  </div>

  <div class="my-5">
    <%= form.label :job_title %>
    <%= form.text_field :job_title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": job_application.errors[:job_title].none?, "border-red-400 focus:outline-red-600": job_application.errors[:job_title].any? }] %>
  </div>

  <div class="my-5 relative">
    <%= form.label :status, class: "block font-medium text-gray-700" %>
    <%= form.select :status,
                    JobApplication::STATUSES.map { |s| [s.titleize, s] },
                    {},
                    class: [
                      "block w-full rounded-md border px-3 py-2 mt-2 shadow-sm appearance-none pr-8",
                      job_application.errors[:status].any? ? "border-red-400 focus:outline-red-600" : "border-gray-400 focus:outline-blue-600"
                    ].join(" ")
    %>
    <div class="absolute right-3 top-9 pointer-events-none text-gray-500">
      â–¼
    </div>
  </div>

  <div class="my-5">
    <%= form.label :applied_on %>
    <%= form.date_field :applied_on, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": job_application.errors[:applied_on].none?, "border-red-400 focus:outline-red-600": job_application.errors[:applied_on].any? }] %>
  </div>

  <div class="my-5">
    <%= form.label :found_on %>
    <%= form.text_field :found_on, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": job_application.errors[:found_on].none?, "border-red-400 focus:outline-red-600": job_application.errors[:found_on].any? }] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
